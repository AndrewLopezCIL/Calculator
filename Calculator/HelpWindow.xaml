<Window x:Class="Calculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="HelpWindow" Height="300" Width="300">
    <StackPanel>
        <TextBlock
            Text="Choose your currency type,"
            HorizontalAlignment="Center" 
            TextAlignment="Center"
            Height="23" Margin="59,0,58,0"/>
        <TextBlock
            Text="enter your information, click calculate, and done! "
            HorizontalAlignment="Center" 
            TextAlignment="Center"
            Height="28" />
        <TextBlock 
            Text="It's that easy."
            HorizontalAlignment="Center"
            Height="28"
            />
        <Button 
            x:Name="Button_Close"
            Width="100"
            Height="33"
            Content="Close"
            Click="Button_Close_Click" Margin="96,0"
            />
    </StackPanel>
</Window>
